{
  
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/core": ["src/core"],
      "@/tools": ["src/tools"],
      "@/validators": ["src/validators"],
      "@/models": ["src/models"],
      "@/custom-errors": ["src/custom-errors"]
    },
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2018",
    "module": "es2015",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "removeComments": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "declaration": true,
    "declarationMap": true,
    "strict": false,
    "resolveJsonModule": true,
    "jsx": "react",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/*.test.ts",
    "src/*.test.tsx",
    "src/*.test-d.ts",
    "src/*.test-d.tsx",
    "src/__mocks__"
  ]
}